@model Assignment2.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Auction Item</h1>

<h4>Item Details</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumBid" class="control-label"></label>
                <input asp-for="MinimumBid" class="form-control" />
                <span asp-validation-for="MinimumBid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartBidDate" class="control-label"></label>
                <input asp-for="StartBidDate" class="form-control" />
                <span asp-validation-for="StartBidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndBidDate" class="control-label"></label>
                <input asp-for="EndBidDate" class="form-control" />
                <span asp-validation-for="EndBidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Condition" class="control-label">Condition</label>
                <select class="form-control" name="Condition" id="Condition">
                    <option value="">-- Select a condition --</option>
                    <option value="Brand New">Brand New</option>
                    <option value="Used">Used</option>
                    <option value="Refurbished">Refurbished</option>
                    <option value="OpenBox">Open Box</option>
                </select>
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                <select class="form-control" name="Category" id="Category">
                    <option value="">-- Select a category --</option>
                    <option value="Electonics">Electronics</option>
                    <option value="Fashion">Fashion</option>
                    <option value="Home">Home</option>
                    <option value="Sports">Sports</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
